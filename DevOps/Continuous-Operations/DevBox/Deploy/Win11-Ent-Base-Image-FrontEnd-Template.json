{
    "apiVersion": "2022-02-14",
    "type": "Microsoft.VirtualMachineImages/imageTemplates",
    "dependsOn": [],
    "name": "<imageName>",
    "location": "<region>",
    "properties": {
        "vmProfile": {
            "vmSize": "Standard_D8s_v3",
            "osDiskSizeGB":128
        },
        "source": {
            "type": "PlatformImage",
            "publisher": "microsoftvisualstudio",
            "offer": "windowsplustools",
            "sku": "base-win11-gen2",
            "version": "latest"
        },
